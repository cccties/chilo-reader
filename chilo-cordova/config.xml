<?xml version='1.0' encoding='utf-8'?>
<widget id="jp.chilos.reader" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CHiLO Reader</name>
    <description>
        EPUB3 Reader application
    </description>
    <author email="info@cccties.org" href="http://chilos.jp">
        NPO CCC-TIES
    </author>
    <content src="reader.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <icon src="img/chilo-reader-icon.png" platform="android"/>
    <preference name="AndroidExtraFilesystems" value="files" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
